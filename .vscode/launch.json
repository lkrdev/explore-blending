    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Functions Framework",
            "type": "debugpy",
            "request": "launch",
            "module": "functions_framework",
            "args": ["--target=main", "--port=9576", "--debug"],
            "jinja": true,
            "justMyCode": false,
            "cwd": "${workspaceFolder}/blend_api",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/blend_api"
            },
            "python": "${workspaceFolder}/blend_api/.venv/bin/python",
            "console": "integratedTerminal"
        }
    ]
}
